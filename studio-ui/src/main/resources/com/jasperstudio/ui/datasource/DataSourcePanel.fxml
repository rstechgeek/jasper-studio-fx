<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TreeView?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.SVGPath?>

<fx:root type="VBox" spacing="0.0" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" stylesheets="@DataSourcePanel.css">
    <children>
        <Label styleClass="sidebar-header" maxWidth="Infinity" text="Data Source" />
        
        <!-- Toolbar -->
        <VBox spacing="5" style="-fx-padding: 5; -fx-background-color: -fx-background;">
            <HBox spacing="5" stylesheets="@../../css/dark.css">
                 <ComboBox fx:id="comboAdapters" promptText="Select Data Adapter..." maxWidth="Infinity" HBox.hgrow="ALWAYS"/>
                 <Button onAction="#onCreateAdapter">
                     <tooltip><Tooltip text="Create New Data Adapter"/></tooltip>
                     <graphic>
                         <!-- Plus Icon -->
                         <SVGPath content="M19 13h-6v6h-2v-6H5v-2h6V5h2v6h6v2z" fill="#555" scaleX="0.7" scaleY="0.7"/>
                     </graphic>
                 </Button>
                 <Button onAction="#onDeleteAdapter">
                      <tooltip><Tooltip text="Delete Selected Data Adapter"/></tooltip>
                      <graphic>
                          <!-- Trash Icon -->
                          <SVGPath content="M6 19c0 1.1.9 2 2 2h8c1.1 0 2-.9 2-2V7H6v12zM19 4h-3.5l-1-1h-5l-1 1H5v2h14V4z" fill="#555" scaleX="0.7" scaleY="0.7"/>
                      </graphic>
                 </Button>
            </HBox>
             <Button text="Run Query..." onAction="#onRunQuery" maxWidth="Infinity" />
        </VBox>
        
        <VBox spacing="10.0" VBox.vgrow="ALWAYS">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <children>
                <TreeView fx:id="treeView" VBox.vgrow="ALWAYS" showRoot="true"/>
            </children>
        </VBox>
    </children>
</fx:root>
