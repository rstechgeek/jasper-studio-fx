<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.control.CheckMenuItem?>
<?import javafx.scene.control.RadioMenuItem?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.SVGPath?>

<fx:root type="BorderPane" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml">
    <top>
        <VBox>
             <MenuBar>
                 <Menu text="File">
                     <MenuItem text="New" onAction="#onNew" accelerator="Shortcut+N"/>
                     <MenuItem text="Open..." onAction="#onOpen" accelerator="Shortcut+O"/>
                     <MenuItem text="Save..." onAction="#onSave" accelerator="Shortcut+S"/>
                     <SeparatorMenuItem/>
                     <MenuItem text="Exit" onAction="#onExit"/>
                 </Menu>
                 <Menu text="Edit">
                     <MenuItem fx:id="menuUndo" text="Undo" accelerator="Shortcut+Z"/>
                     <MenuItem fx:id="menuRedo" text="Redo" accelerator="Shortcut+Y"/>
                     <SeparatorMenuItem/>
                     <MenuItem fx:id="menuCut" text="Cut" accelerator="Shortcut+X"/>
                     <MenuItem fx:id="menuCopy" text="Copy" accelerator="Shortcut+C"/>
                     <MenuItem fx:id="menuPaste" text="Paste" accelerator="Shortcut+V"/>
                     <SeparatorMenuItem/>
                     <MenuItem fx:id="menuDelete" text="Delete" accelerator="Delete"/>
                     <MenuItem fx:id="menuSelectAll" text="Select All" accelerator="Shortcut+A"/>
                 </Menu>
                 <Menu text="View">
                     <MenuItem text="Zoom In" onAction="#onZoomIn" accelerator="Shortcut+EQUALS"/>
                     <MenuItem text="Zoom Out" onAction="#onZoomOut" accelerator="Shortcut+MINUS"/>
                     <SeparatorMenuItem/>
                     <Menu text="Background Image">
                         <MenuItem text="Add Background Image..." />
                         <MenuItem text="Clear Background Image" />
                     </Menu>
                     <SeparatorMenuItem/>
                     <CheckMenuItem fx:id="menuShowRulers" text="Show Rulers"/>
                     <CheckMenuItem fx:id="menuSnapToGuides" text="Snap To Guides"/>
                     <SeparatorMenuItem/>
                     <CheckMenuItem fx:id="menuShowGrid" text="Show Grid"/>
                     <CheckMenuItem fx:id="menuSnapToGrid" text="Snap To Grid"/>
                     <CheckMenuItem fx:id="menuSnapToGeometry" text="Snap To Geometry"/>
                     <MenuItem text="Grid Size..."/>
                     <SeparatorMenuItem/>
                     <CheckMenuItem fx:id="menuShowSpreadsheetTags" text="Show Spreadsheet Tags"/>
                     <CheckMenuItem fx:id="menuShowJSONTags" text="Show JSON Tags"/>
                     <CheckMenuItem fx:id="menuShowCSVTags" text="Show CSV Tags"/>
                     <CheckMenuItem fx:id="menuShowXLSTags" text="Show XLS Tags"/>
                     <CheckMenuItem fx:id="menuHighlightRenderGrid" text="Highlight Render Grid"/>
                     <CheckMenuItem fx:id="menuShowPDF508Tags" text="Show PDF508 Tags"/>
                     <CheckMenuItem fx:id="menuShowErrorsForElements" text="Show Errors For Elements"/>
                     <SeparatorMenuItem/>
                     <CheckMenuItem fx:id="menuShowPalette" text="Palette" selected="true"/>
                     <CheckMenuItem fx:id="menuShowData" text="Data Source" selected="true"/>
                     <CheckMenuItem fx:id="menuShowOutline" text="Outline" selected="true"/>
                     <CheckMenuItem fx:id="menuShowProperties" text="Properties" selected="true"/>
                     <CheckMenuItem fx:id="menuShowAssistant" text="AI Assistant" selected="true"/>
                 </Menu>
                 <Menu text="Style">
                     <RadioMenuItem fx:id="menuStyleLight" text="Light Theme" selected="true"/>
                     <RadioMenuItem fx:id="menuStyleDark" text="Dark Theme"/>
                     <RadioMenuItem fx:id="menuStyleGlass" text="Clear Glass UI"/>
                 </Menu>
             </MenuBar>
             <ToolBar>
                 <javafx.scene.control.Button fx:id="btnUndo">
                     <tooltip><Tooltip text="Undo"/></tooltip>
                     <graphic>
                         <SVGPath content="M12.5 8c-2.65 0-5.05.99-6.9 2.6L2 7v9h9l-3.62-3.62c1.39-1.16 3.16-1.88 5.12-1.88 3.54 0 6.55 2.31 7.6 5.5l2.37-.78C21.08 11.03 17.15 8 12.5 8z" fill="#555555" scaleX="0.8" scaleY="0.8"/>
                     </graphic>
                 </javafx.scene.control.Button>
                 <javafx.scene.control.Button fx:id="btnRedo">
                     <tooltip><Tooltip text="Redo"/></tooltip>
                     <graphic>
                         <SVGPath content="M18.4 10.6C16.55 9 14.15 8 11.5 8c-4.65 0-8.58 3.03-9.96 7.22L3.9 16c1.05-3.19 4.05-5.5 7.6-5.5 1.95 0 3.73.72 5.12 1.88L13 16h9V7l-3.6 3.6z" fill="#555555" scaleX="0.8" scaleY="0.8"/>
                     </graphic>
                 </javafx.scene.control.Button>
             </ToolBar>
        </VBox>
    </top>
    <center>
        <SplitPane fx:id="mainSplit" dividerPositions="0.2, 0.8">
             <!-- Left Sidebar -->
             <SplitPane fx:id="leftSidebar" orientation="VERTICAL" dividerPositions="0.6" minWidth="220">
                 <TabPane fx:id="leftUpperTabPane" tabClosingPolicy="UNAVAILABLE">
                     <Tab fx:id="tabPalette" text="Palette">
                         <StackPane fx:id="paletteContainer" style="-fx-background-color: #f4f4f4;"/>
                     </Tab>
                     <Tab fx:id="tabData" text="Data">
                         <StackPane fx:id="dataContainer"/>
                     </Tab>
                 </TabPane>
                 <TabPane fx:id="leftLowerTabPane" tabClosingPolicy="UNAVAILABLE">
                     <Tab fx:id="tabOutline" text="Outline">
                         <StackPane fx:id="outlineContainer"/>
                     </Tab>
                 </TabPane>
             </SplitPane>
             
             <!-- Center Canvas Area -->
             <SplitPane orientation="VERTICAL" dividerPositions="0.8">
                 <StackPane fx:id="canvasContainer" />
                 <StackPane fx:id="logContainer" />
             </SplitPane>
             
             <!-- Right Sidebar -->
             <SplitPane fx:id="rightSidebar" orientation="VERTICAL" dividerPositions="0.6" minWidth="250">
                 <TabPane fx:id="rightUpperTabPane" tabClosingPolicy="UNAVAILABLE">
                     <Tab fx:id="tabProperties" text="Properties">
                          <StackPane fx:id="propertiesContainer" />
                     </Tab>
                 </TabPane>
                 <TabPane fx:id="rightLowerTabPane" tabClosingPolicy="UNAVAILABLE">
                     <Tab fx:id="tabAssistant" text="AI Assistant">
                          <StackPane fx:id="assistantContainer" />
                     </Tab>
                 </TabPane>
             </SplitPane>
        </SplitPane>
    </center>
    <bottom>
        <StackPane prefHeight="30" style="-fx-background-color: #333;">
            <Label text="AI Assistant Ready" style="-fx-text-fill: white;" />
        </StackPane>
    </bottom>
</fx:root>
